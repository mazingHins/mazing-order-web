<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.mazing.services.backend.admin.dao.AppDefineDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.mazing.services.backend.admin.entry.AppDefinePO" useGeneratedKeys="false" >
		insert into mz_admin.mz_app_define (app_id,name,display_name,app_key,summary,status,login_url,sequence,operator,last_modify,bug_report_url,create_time) values (#{appId},#{name},#{displayName},#{appKey},#{summary},#{status},#{loginUrl},#{sequence},#{operator},#{lastModify},#{bugReportUrl},#{createTime})
	</insert>

	<!-- 根据主键，删除数据 -->
	<delete id="deleteById" parameterType="Map">
		DELETE FROM mz_admin.mz_app_define WHERE app_id=#{appId}
	</delete>

	<!-- 更新 -->
	<update id="update" parameterType="com.mazing.services.backend.admin.entry.AppDefinePO">
		update mz_admin.mz_app_define set name=#{name},display_name=#{displayName},app_key=#{appKey},summary=#{summary},status=#{status},login_url=#{loginUrl},sequence=#{sequence},operator=#{operator},last_modify=#{lastModify},bug_report_url=#{bugReportUrl} where app_id=#{appId}
	</update>

	<!-- 根据主键读取记录（主键可能有多个） -->
	<select id="getById" parameterType="Map" resultType="com.mazing.services.backend.admin.entry.AppDefinePO">
		SELECT * FROM mz_admin.mz_app_define WHERE app_id=#{appId}
	</select>

	<!-- 查询全部记录 -->
	<select id="listAll" resultType="com.mazing.services.backend.admin.entry.AppDefinePO">
		SELECT * FROM mz_admin.mz_app_define
	</select>

</mapper>
