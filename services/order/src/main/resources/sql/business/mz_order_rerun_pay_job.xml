<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.mazing.services.order.business.dao.OrderRerunPayJobDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.mazing.services.order.business.entry.OrderRerunPayJobPO" useGeneratedKeys="false" >
		insert into mz_order.mz_order_rerun_pay_job (order_id,params,rerun_count,create_time,next_run_time) values (#{orderId},#{params},#{rerunCount},#{createTime},#{nextRunTime})
	</insert>

	<!-- 根据主键，删除数据 -->
	<delete id="deleteById" parameterType="Map">
		DELETE FROM mz_order.mz_order_rerun_pay_job WHERE order_id=#{orderId}
	</delete>

	<!-- 更新 -->
	<update id="update" parameterType="com.mazing.services.order.business.entry.OrderRerunPayJobPO">
		update mz_order.mz_order_rerun_pay_job set params=#{params},rerun_count=#{rerunCount},next_run_time=#{nextRunTime} where order_id=#{orderId}
	</update>

	<!-- 根据主键读取记录（主键可能有多个） -->
	<select id="getById" parameterType="Map" resultType="com.mazing.services.order.business.entry.OrderRerunPayJobPO">
		SELECT * FROM mz_order.mz_order_rerun_pay_job WHERE order_id=#{param1}
	</select>

	<!-- 查询全部记录 -->
	<select id="listAll" resultType="com.mazing.services.order.business.entry.OrderRerunPayJobPO">
		SELECT * FROM mz_order.mz_order_rerun_pay_job
	</select>
	
	<!-- 查询创建时间晚于某个值的所有记录 -->
	<select id="listLaterThan" resultType="com.mazing.services.order.business.entry.OrderRerunPayJobPO">
		SELECT * FROM mz_order.mz_order_rerun_pay_job WHERE create_time>#{time}
	</select>
	
	<!-- 更新运行次数和下次运行时间 -->
	<update id="updateRunCountAndNextRunTime" parameterType="Map">
		update mz_order.mz_order_rerun_pay_job set rerun_count=rerun_count+1,next_run_time=#{nextRunTime} where order_id=#{orderId}
	</update>

</mapper>
