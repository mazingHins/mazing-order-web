<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.mazing.services.order.base.dao.OrderDetailDao">

	<!--
	新增
	2016/2/24 新增 spec_id,spec_name,supplements,dish_key 字段
	 -->
	<insert id="save" parameterType="com.mazing.services.order.base.entry.OrderDetailPO" useGeneratedKeys="false" >
		insert into mz_order.mz_order_detail (order_id,object_id,number,unit_fee,total_fee,create_time,spec_id,spec_name,supplements,dish_key) values (#{orderId},#{objectId},#{number},#{unitFee},#{totalFee},#{createTime},#{specId},#{specName},#{supplements},#{dishKey})
	</insert>

	<!-- 根据主键，删除数据 -->
	<delete id="deleteById" parameterType="Map">
		DELETE FROM mz_order.mz_order_detail WHERE object_id=#{objectId} AND order_id=#{orderId}
	</delete>

	<!-- 更新 -->
	<!--<update id="update" parameterType="com.mazing.services.order.base.entry.OrderDetailPO">-->
		<!--update mz_order.mz_order_detail set number=#{number},unit_fee=#{unitFee},total_fee=#{totalFee} where object_id=#{objectId} and order_id=#{orderId}-->
	<!--</update>-->

	<!-- 根据主键读取记录（主键可能有多个） -->
	<select id="getById" parameterType="Map" resultType="com.mazing.services.order.base.entry.OrderDetailPO">
		SELECT * FROM mz_order.mz_order_detail WHERE order_id=#{orderId} AND object_id=#{objectId}
	</select>
	
	<!-- 根据订单ID 查询全部记录 -->
	<select id="listByOrderId" parameterType="java.lang.Long" resultType="com.mazing.services.order.base.entry.OrderDetailPO">
		SELECT * FROM mz_order.mz_order_detail where order_id=#{orderId}
	</select>
	
	<select id="listByPage" parameterType="Map" resultType="com.mazing.services.order.base.entry.OrderDetailPO">
		SELECT * FROM mz_order.mz_order_detail LIMIT #{offset},#{pageSize} 
	</select>
	
	<select id="countOrderDishs" parameterType="Map" resultType="java.lang.Integer">
		SELECT count(*) from mz_order.mz_order_detail where order_id=#{orderId}
	</select>
	
	<select id="listByUidDishKey" parameterType="Map" resultType="com.mazing.services.order.base.entry.OrderDetailPO">
		SELECT * FROM mz_order.mz_order as o , mz_order.mz_order_detail as d where o.order_id=d.order_id AND o.uid=#{uid} 
		AND o.status IN (
			<foreach collection="status" item="item" index="index" separator=",">
				#{item}
			</foreach>)
		AND d.dish_key=#{dishKey}
	</select>

</mapper>
