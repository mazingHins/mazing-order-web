<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.mazing.services.order.base.dao.OrderTicketDetailDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.mazing.services.order.base.entry.OrderTicketDetailPO" useGeneratedKeys="false" >
		insert into mz_order.mz_order_ticket_detail (order_id,order_no,ticket_id,ticket_rule_id,event_id,ticket_name,ticket_en_name,price,seat,create_time,uid) values (#{orderId},#{orderNo},#{ticketId},#{ticketRuleId},#{eventId},#{ticketName},#{ticketEnName},#{price},#{seat},#{createTime},#{uid})
	</insert>

	<!-- 根据主键，删除数据
	<delete id="deleteById" parameterType="Map">
		DELETE FROM mz_order.mz_order_ticket_detail WHERE order_id=#{param1} AND ticket_id=#{param2}
	</delete>
	 -->

	<!-- 更新 -->
	<update id="update" parameterType="com.mazing.services.order.base.entry.OrderTicketDetailPO">
		update mz_order.mz_order_ticket_detail set ticket_rule_id=#{ticketRuleId},price=#{price} where order_id=#{orderId} and ticket_id=#{ticketId}
	</update>

	<!-- 根据主键读取记录（主键可能有多个） -->
	<select id="getById" parameterType="Map" resultType="com.mazing.services.order.base.entry.OrderTicketDetailPO">
		SELECT * FROM mz_order.mz_order_ticket_detail WHERE order_id=#{param1} AND ticket_id=#{param2}
	</select>

	<!-- 查询全部记录 -->
	<select id="listAll" resultType="com.mazing.services.order.base.entry.OrderTicketDetailPO">
		SELECT * FROM mz_order.mz_order_ticket_detail
	</select>

	<!-- 批量插入 -->
	<insert id="saveAll" parameterType="java.util.List">
        insert into mz_order.mz_order_ticket_detail (order_id,order_no,ticket_status,ticket_id,ticket_rule_id,event_id,ticket_name,ticket_en_name,price,seat,create_time,uid)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.orderId},#{item.orderNo},#{item.ticketStatus},#{item.ticketId},#{item.ticketRuleId},#{item.eventId},#{item.ticketName},#{item.ticketEnName},#{item.price},#{item.seat},#{item.createTime},#{item.uid})
        </foreach>
    </insert>
    
    <!-- 查询全部记录 -->
	<select id="listAllByOrderId" resultType="com.mazing.services.order.base.entry.OrderTicketDetailPO">
		SELECT * FROM mz_order.mz_order_ticket_detail where order_id =#{orderId}
	</select>
	<!-- 查询用户已购买的该TICKET列表 -->
	<select id="listAlreadyBuyByUidAndTicketRuleId" resultType="com.mazing.services.order.base.entry.OrderTicketDetailPO">
		SELECT * FROM mz_order.mz_order_ticket_detail where uid =#{uid} AND ticket_rule_id=#{ticketRuleId} AND ticket_status>1
	</select>
	
	
	<!-- 根据用户id查询订单明细 -->
	<select id="listAllByUid" resultType="com.mazing.services.order.base.entry.OrderTicketDetailPO">
		SELECT * FROM mz_order.mz_order_ticket_detail where uid =#{uid} 
		<!-- 过滤某个状态 -->
		<if test="statusList != null">
			and ticket_status not in (
			<foreach collection="statusList" item="item" index="index" separator=",">
	            (#{item})
	        </foreach>
			)
		</if>
		order by ticket_status, create_time desc LIMIT #{pageIndex},#{pageSize}
	</select>
	
	<!-- 更新订单明细的订单状态 -->
	<update id="updateOrderStatus">
		update mz_order.mz_order_ticket_detail set ticket_status=#{newStatus} where order_id=#{orderId} and ticket_status=#{oldStatus}
		<if test="ticketId != 0">
			and ticket_id=#{ticketId} 
		</if>
	</update>
</mapper>
