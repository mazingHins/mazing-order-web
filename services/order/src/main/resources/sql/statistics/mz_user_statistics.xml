<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.mazing.services.order.statistics.dao.UserStatisticsDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.mazing.services.order.statistics.entry.UserStatisticsPO" useGeneratedKeys="false" >
		insert into mz_order.mz_user_statistics (uid,buy_dish,buy_store,eaten_store) values (#{uid},#{buyDish},#{buyStore},#{eatenStore})
	</insert>

	<!-- 根据主键，删除数据
	<delete id="deleteById" parameterType="Map">
		DELETE FROM mz_order.mz_user_statistics WHERE uid=#{param1}
	</delete>
	 -->

	<!-- 更新 -->
	<update id="update" parameterType="com.mazing.services.order.statistics.entry.UserStatisticsPO">
		update mz_order.mz_user_statistics set buy_dish=#{buyDish},buy_store=#{buyStore},eaten_store=#{eatenStore} where uid=#{uid}
	</update>

	<!-- 根据主键读取记录（主键可能有多个） -->
	<select id="getById" parameterType="Map" resultType="com.mazing.services.order.statistics.entry.UserStatisticsPO">
		SELECT * FROM mz_order.mz_user_statistics WHERE uid=#{param1}
	</select>

	<!-- 查询全部记录 -->
	<select id="listAll" resultType="com.mazing.services.order.statistics.entry.UserStatisticsPO">
		SELECT * FROM mz_order.mz_user_statistics
	</select>
	
	<select id="listAllByPage" parameterType="Map" resultType="com.mazing.services.order.statistics.entry.UserStatisticsPO">
		SELECT * FROM mz_order.mz_user_statistics limit #{offset},#{pageSize} 
	</select>

</mapper>
