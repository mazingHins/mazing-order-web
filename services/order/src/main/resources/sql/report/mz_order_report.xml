<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.mazing.services.order.report.dao.OrderReportDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.mazing.services.order.report.entry.OrderReportPO" useGeneratedKeys="false" >
		insert into mz_order.mz_order_report (date_serial,create_orders_total,create_orders_fee,online_orders_total,cash_orders_total,non_payment_total,cancel_orders_total,finish_orders_total,finish_orders_fee,online_order_fee,create_time,mazing_pay_create_orders_total,mazing_pay_finish_orders_fee,mazing_pay_finish_orders_total,mazing_pay_non_payment_total,mazing_pay_cancel_orders_total) values (#{dateSerial},#{createOrdersTotal},#{createOrdersFee},#{onlineOrdersTotal},#{cashOrdersTotal},#{nonPaymentTotal},#{cancelOrdersTotal},#{finishOrdersTotal},#{finishOrdersFee},#{onlineOrderFee},#{createTime},#{mazingPayCreateOrdersTotal},#{mazingPayFinishOrdersFee},#{mazingPayFinishOrdersTotal},#{mazingPayNonPaymentTotal},#{mazingPayCancelOrdersTotal})
	</insert>

	<!-- 根据主键，删除数据
	<delete id="deleteById" parameterType="Map">
		DELETE FROM mz_order.mz_order_report WHERE date_serial=#{param1}
	</delete>
	 -->

	<!-- 更新 -->
	<update id="update" parameterType="com.mazing.services.order.report.entry.OrderReportPO">
		update mz_order.mz_order_report set create_orders_total=#{createOrdersTotal},create_orders_fee=#{createOrdersFee},online_orders_total=#{onlineOrdersTotal},cash_orders_total=#{cashOrdersTotal},non_payment_total=#{nonPaymentTotal},cancel_orders_total=#{cancelOrdersTotal},finish_orders_total=#{finishOrdersTotal},finish_orders_fee=#{finishOrdersFee},online_order_fee=#{onlineOrderFee},mazing_pay_create_orders_total=#{mazingPayCreateOrdersTotal},mazing_pay_finish_orders_fee=#{mazingPayFinishOrdersFee},mazing_pay_finish_orders_total=#{mazingPayFinishOrdersTotal},mazing_pay_non_payment_total=#{mazingPayNonPaymentTotal},mazing_pay_cancel_orders_total=#{mazingPayCancelOrdersTotal} where date_serial=#{dateSerial}
	</update>

	<!-- 根据主键读取记录（主键可能有多个） -->
	<select id="getById" parameterType="Map" resultType="com.mazing.services.order.report.entry.OrderReportPO">
		SELECT * FROM mz_order.mz_order_report WHERE date_serial=#{param1}
	</select>

	<!-- 查询某个日期段内的记录列表 -->
	<select id="queryByBetweenDay" resultType="com.mazing.services.order.report.entry.OrderReportPO">
		SELECT * FROM mz_order.mz_order_report where date_serial BETWEEN #{start} AND #{end}
	</select>

</mapper>
