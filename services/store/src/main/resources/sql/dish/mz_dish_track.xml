<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.mazing.services.store.dish.dao.DishTrackDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.mazing.services.store.dish.entry.DishTrackPO" useGeneratedKeys="false" >
		insert into mz_merchant.mz_dish_track (parent_dish_id,dish_id,dish_name,dish_name_en,dish_key,store_id,store_name,status,currency_type,category_id,promote_tag,expiry_time,original_price,price,special_content,content,fav_img,topic_img,order_img,spec,create_time) values (#{parentDishId},#{dishId},#{dishName},#{dishNameEn},#{dishKey},#{storeId},#{storeName},#{status},#{currencyType},#{categoryId},#{promoteTag},#{expiryTime},#{originalPrice},#{price},#{specialContent},#{content},#{favImg},#{topicImg},#{orderImg},#{spec},#{createTime})
	</insert>

	<!-- 根据主键读取记录（主键可能有多个） -->
	<select id="getById" parameterType="Map" resultType="com.mazing.services.store.dish.entry.DishTrackPO">
		SELECT * FROM mz_merchant.mz_dish_track WHERE dish_id=#{dishId}
	</select>
	
	<!-- 查询orderImg字段为空的美食 -->
	<select id="queryByEmptyOrderImg" resultType="com.mazing.services.store.dish.entry.DishTrackPO">
		SELECT * FROM mz_merchant.mz_dish_track WHERE order_img='' ORDER BY create_time DESC LIMIT #{offset},#{pageSize}
	</select>
	
	<!-- 统计菜品上架数量 -->
	<select id="countByEmptyOrderImg" resultType="java.lang.Integer">
		SELECT count(*) FROM mz_merchant.mz_dish_track WHERE order_img=''
	</select>
	
	<!-- 修改美食orderImg -->
	<update id="updateOrderImg" parameterType="Map">
		UPDATE mz_merchant.mz_dish_track set order_img=#{orderImg} where dish_id=#{dishId}
	</update>

	<!--
	根据 dishKey 返回符合条件的记录，按 create_time 倒序排列
	ten 2016/2/29
	-->
	<select id="listByDishKey" parameterType="Map" resultType="com.mazing.services.store.dish.entry.DishTrackPO">
		SELECT * FROM mz_merchant.mz_dish_track
		WHERE dish_key=#{dishKey} limit 0,#{limit}
	</select>
</mapper>
