<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.mazing.services.store.mapping.dao.DishFlavorMpDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.mazing.services.store.mapping.entry.DishFlavorMpPO" useGeneratedKeys="false" >
		insert into mz_merchant.mz_dish_flavor_mp (dish_key,flavor_id,store_id,create_time) values (#{dishKey},#{flavorId},#{storeId},#{createTime})
	</insert>

	<!-- 根据主键，删除数据 -->
	<delete id="deleteById" parameterType="Map">
		DELETE FROM mz_merchant.mz_dish_flavor_mp WHERE flavor_id=#{flavorId} AND dish_key=#{dishKey}
	</delete>

	<!-- 读取菜品的口味列表 -->
	<select id="queryByDishKey" resultType="com.mazing.services.store.mapping.entry.DishFlavorMpPO">
		SELECT * FROM mz_merchant.mz_dish_flavor_mp WHERE dish_key=#{dishKey}
	</select>

</mapper>
