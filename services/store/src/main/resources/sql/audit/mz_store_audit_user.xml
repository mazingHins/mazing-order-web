<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.mazing.services.store.audit.dao.StoreAuditUserDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.mazing.services.store.audit.entry.StoreAuditUserPO" useGeneratedKeys="false" >
		insert into mz_merchant.mz_store_audit_user (uid,realname,phone,identity,i_face,i_back,i_hold,effective,create_time,up_time) values (#{uid},#{realname},#{phone},#{identity},#{iFace},#{iBack},#{iHold},#{effective},#{createTime},#{upTime})
	</insert>

	<!-- 根据主键，删除数据
	<delete id="deleteById" parameterType="Map">
		DELETE FROM mz_merchant.mz_store_audit_user WHERE uid=#{param1}
	</delete>
	 -->

	<!-- 更新 -->
	<update id="update" parameterType="com.mazing.services.store.audit.entry.StoreAuditUserPO">
		update mz_merchant.mz_store_audit_user set realname=#{realname},phone=#{phone},identity=#{identity},i_face=#{iFace},i_back=#{iBack},i_hold=#{iHold},effective=#{effective},up_time=#{upTime},status=#{status} where uid=#{uid}
	</update>

	<!-- 根据主键读取记录（主键可能有多个） -->
	<select id="getById" parameterType="Map" resultType="com.mazing.services.store.audit.entry.StoreAuditUserPO">
		SELECT * FROM mz_merchant.mz_store_audit_user WHERE uid=#{param1}
	</select>

	<!-- 查询全部记录 -->
	<select id="listAll" resultType="com.mazing.services.store.audit.entry.StoreAuditUserPO">
		SELECT * FROM mz_merchant.mz_store_audit_user
	</select>

	<!-- 转让门店：转让店主的个人证据信息 ten 2015/10/22，后台管理使用，一般不应该出现这个选项 -->
	<update id="storeTransferOwnerInfo" parameterType="Map">
		UPDATE mz_merchant.mz_store_audit_user SET uid=#{newUid}, realname=#{realName}, identity=#{identity}, phone=#{phone} WHERE uid=#{oldUid}
	</update>

	<!-- 更新 真实姓名 和 证件号 信息 -->
	<update id="updateRealNameAndIdentity" parameterType="Map">
		UPDATE mz_merchant.mz_store_audit_user SET realname=#{realName}, identity=#{identity} WHERE uid=#{uid}
	</update>
	
	<!-- 更新 审核状态 -->
	<update id="updateStatus" parameterType="Map">
		UPDATE mz_merchant.mz_store_audit_user SET status=#{status} WHERE uid=#{uid}
	</update>

	<!-- 更新 真实姓名、证件号、电话 信息 ten 2015/11/26 -->
	<update id="updateRealNameIdentityAndPhone" parameterType="Map">
		UPDATE mz_merchant.mz_store_audit_user SET realname=#{realName}, identity=#{identity}, phone=#{phone} WHERE uid=#{uid}
	</update>
</mapper>
