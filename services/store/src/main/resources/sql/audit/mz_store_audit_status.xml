<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.mazing.services.store.audit.dao.StoreAuditStatusDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.mazing.services.store.audit.entry.StoreAuditStatusPO" useGeneratedKeys="false" >
		insert into mz_merchant.mz_store_audit_status (store_id,uid,store_name,create_time) values (#{storeId},#{uid},#{storeName},#{createTime})
	</insert>

	<!-- 根据主键，删除数据 -->
	<delete id="deleteById" parameterType="Map">
		DELETE FROM mz_merchant.mz_store_audit_status WHERE store_id=#{param1}
	</delete>

	<!-- 更新 -->
	<update id="update" parameterType="com.mazing.services.store.audit.entry.StoreAuditStatusPO">
		update mz_merchant.mz_store_audit_status set uid=#{uid},store_name=#{storeName} where store_id=#{storeId}
	</update>

	<!-- 根据主键读取记录（主键可能有多个） -->
	<select id="getById" parameterType="Map" resultType="com.mazing.services.store.audit.entry.StoreAuditStatusPO">
		SELECT * FROM mz_merchant.mz_store_audit_status WHERE store_id=#{param1}
	</select>

	<!-- 查询全部记录 -->
	<select id="listAll" resultType="com.mazing.services.store.audit.entry.StoreAuditStatusPO">
		SELECT * FROM mz_merchant.mz_store_audit_status
	</select>
	
	<!-- 查询符合条件的待审核商店数据，后台管理测试界面使用 ben 2015/12/3 -->
	<select id="listStoreAuditByPage" parameterType="Map" resultType="com.mazing.services.store.audit.entry.StoreAuditStatusPO">
		SELECT * FROM mz_merchant.mz_store_audit_status order by create_time desc LIMIT #{offset},#{limit}
	</select>

</mapper>
