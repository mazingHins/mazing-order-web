<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.mazing.services.store.base.dao.TeamPayBuyDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.mazing.services.store.base.entry.TeamPayBuyPO" useGeneratedKeys="false" >
		insert into mz_merchant.mz_team_pay_buy (buy_id,team_pay_id,store_id,goods_id,members,member_limit,price,status,expire_time_mode,expire_time_value,over_time,start_time,end_time,create_time) values (#{buyId},#{teamPayId},#{storeId},#{goodsId},#{members},#{memberLimit},#{price},#{status},#{expireTimeMode},#{expireTimeValue},#{overTime},#{startTime},#{endTime},#{createTime})
	</insert>

	<!-- 根据主键，删除数据
	<delete id="deleteById" parameterType="Map">
		DELETE FROM mz_merchant.mz_team_pay_buy WHERE buy_id=#{param1}
	</delete>
	 -->

	<!-- 更新 -->
	<update id="update" parameterType="com.mazing.services.store.base.entry.TeamPayBuyPO">
		update mz_merchant.mz_team_pay_buy set team_pay_id=#{teamPayId},store_id=#{storeId},members=#{members},member_limit=#{memberLimit},price=#{price},status=#{status},expire_time_mode=#{expireTimeMode},expire_time_value=#{expireTimeValue},start_time=#{startTime},end_time=#{endTime} where buy_id=#{buyId}
	</update>

	<!-- 根据主键读取记录（主键可能有多个） -->
	<select id="getById" parameterType="Map" resultType="com.mazing.services.store.base.entry.TeamPayBuyPO">
		SELECT * FROM mz_merchant.mz_team_pay_buy WHERE buy_id=#{param1}
	</select>

	<!-- 查询全部记录 -->
	<select id="listAll" resultType="com.mazing.services.store.base.entry.TeamPayBuyPO">
		SELECT * FROM mz_merchant.mz_team_pay_buy
	</select>

	<!-- 根据状态获取过期未使用的团购 -->
	<select id="listByStatusAndEndTime" resultType="com.mazing.services.store.base.entry.TeamPayBuyPO">
		SELECT * FROM mz_merchant.mz_team_pay_buy where status=#{status} 
		<![CDATA[ 
			and end_time < #{endTime}
		]]>
	</select>
	
	<!-- 根据状态获取团购 -->
	<select id="listByStatus" resultType="com.mazing.services.store.base.entry.TeamPayBuyPO">
		SELECT * FROM mz_merchant.mz_team_pay_buy where status=#{status} 
	</select>

	<!-- 获取所有非解散的团 -->	
	<select id="listAllByTeamPayId" resultType="com.mazing.services.store.base.entry.TeamPayBuyPO">
		SELECT * FROM mz_merchant.mz_team_pay_buy where team_pay_id=#{teamPayId}
		<![CDATA[ 
			 and status < 2
		]]>
	</select>
</mapper>
