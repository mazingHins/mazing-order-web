<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.mazing.services.store.base.dao.TeamPayRecordDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.mazing.services.store.base.entry.TeamPayRecordPO" useGeneratedKeys="false" >
		insert into mz_merchant.mz_team_pay_record (record_id,buy_id,uid,order_no,`check`,check_uid,check_time,create_time,expire_time) values (#{recordId},#{buyId},#{uid},#{orderNo},#{check},#{checkUid},#{checkTime},#{createTime},#{expireTime})
	</insert>

	<!-- 根据主键，删除数据
	<delete id="deleteById" parameterType="Map">
		DELETE FROM mz_merchant.mz_team_pay_record WHERE record_id=#{param1}
	</delete>
	 -->

	<!-- 更新 -->
	<update id="update" parameterType="com.mazing.services.store.base.entry.TeamPayRecordPO">
		update mz_merchant.mz_team_pay_record set buy_id=#{buyId},uid=#{uid},order_no=#{orderNo},`check`=#{check},check_uid=#{checkUid},check_time=#{checkTime},expire_time=#{expireTime} where record_id=#{recordId}
	</update>

	<!-- 根据主键读取记录（主键可能有多个） -->
	<select id="getById" parameterType="Map" resultType="com.mazing.services.store.base.entry.TeamPayRecordPO">
		SELECT * FROM mz_merchant.mz_team_pay_record WHERE record_id=#{param1}
	</select>

	<!-- 查询全部记录 -->
	<select id="listAll" resultType="com.mazing.services.store.base.entry.TeamPayRecordPO">
		SELECT * FROM mz_merchant.mz_team_pay_record
	</select>

	<!-- 查询全部记录 -->
	<select id="listByBuyId" resultType="com.mazing.services.store.base.entry.TeamPayRecordPO">
		SELECT * FROM mz_merchant.mz_team_pay_record where buy_id=#{buyId}
	</select>
	
	<!-- 根据状态和时间获取购买记录 -->
	<select id="listByExpire" resultType="com.mazing.services.store.base.entry.TeamPayRecordPO">
		SELECT * FROM mz_merchant.mz_team_pay_record where `check`=#{check} 
		<![CDATA[ 
			and expire_time <= #{expireTime}
		]]>
	</select>
	
	
	<select id="listAllByBuyIdsAndUid" resultType="com.mazing.services.store.base.entry.TeamPayRecordPO">
		SELECT * FROM mz_merchant.mz_team_pay_record where uid=#{uid}
		and buy_id IN (
		<foreach collection="buyIds" item="item" index="index" separator="," >
			#{item}
		</foreach>
		)
	</select>
</mapper>
