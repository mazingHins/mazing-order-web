<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.mazing.services.store.news.dao.NewsBlockFavDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.mazing.services.store.news.entry.NewsBlockFavPO"
		useGeneratedKeys="false">
		insert into mz_merchant.mz_news_block_fav
		(fid,uid,bid,create_time) values (#{fid},#{uid},#{bid},#{createTime})
	</insert>

	<!-- 根据主键，删除数据 -->
	<delete id="deleteById" parameterType="Map">
		DELETE FROM
		mz_merchant.mz_news_block_fav WHERE fid=#{param1}
	</delete>


	<!-- 更新 -->
	<update id="update" parameterType="com.mazing.services.store.news.entry.NewsBlockFavPO">
		update
		mz_merchant.mz_news_block_fav set uid=#{uid},bid=#{bid} where
		fid=#{fid}
	</update>

	<!-- 根据主键读取记录（主键可能有多个） -->
	<select id="getById" parameterType="Map"
		resultType="com.mazing.services.store.news.entry.NewsBlockFavPO">
		SELECT * FROM mz_merchant.mz_news_block_fav WHERE
		fid=#{param1}
	</select>

	<select id="getByUniqKey" parameterType="Map"
		resultType="com.mazing.services.store.news.entry.NewsBlockFavPO">
		SELECT * FROM mz_merchant.mz_news_block_fav WHERE
		uid=#{uid} AND bid=#{bid}
	</select>


	<!-- 查询全部记录 -->
	<select id="listAll" resultType="com.mazing.services.store.news.entry.NewsBlockFavPO">
		SELECT * FROM
		mz_merchant.mz_news_block_fav
	</select>
	
	<!-- 分页查询用户的收藏数据 -->
	<select id="pageByUid" resultType="com.mazing.services.store.news.entry.NewsBlockFavPO">
		SELECT * FROM
		mz_merchant.mz_news_block_fav where uid=#{uid} ORDER BY create_time
		DESC LIMIT #{offset}, #{rows}
	</select>
	
	<select id="listByUid" resultType="com.mazing.services.store.news.entry.NewsBlockFavPO">
		SELECT * FROM
		mz_merchant.mz_news_block_fav where uid=#{uid} ORDER BY create_time
		DESC 
	</select>
	


</mapper>
