<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.mazing.services.store.express.dao.StoreSfTrackDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.mazing.services.store.express.entry.StoreSfTrackPO" useGeneratedKeys="false" >
		insert into mz_merchant.mz_store_sf_track (store_id,cuisine_type,vid,store_code,user_bear,mz_bear,merchant_bear,weight,distance,delivery_time,fee,descrip,admin_id,record_time) values (#{storeId},#{cuisineType},#{vid},#{storeCode},#{userBear},#{mzBear},#{merchantBear},#{weight},#{distance},#{deliveryTime},#{fee},#{descrip},#{adminId},#{recordTime})
	</insert>

	<!-- 根据主键，删除数据
	<delete id="deleteById" parameterType="Map">
		DELETE FROM mz_merchant.mz_store_sf_track WHERE store_id=#{param1} AND vid=#{param2}
	</delete>
	 -->

	<!-- 更新 -->
	<update id="update" parameterType="com.mazing.services.store.express.entry.StoreSfTrackPO">
		update mz_merchant.mz_store_sf_track set cuisine_type=#{cuisineType},store_code=#{storeCode},user_bear=#{userBear},mz_bear=#{mzBear},merchant_bear=#{merchantBear},weight=#{weight},distance=#{distance},delivery_time=#{deliveryTime},fee=#{fee},descrip=#{descrip},admin_id=#{adminId},record_time=#{recordTime} where store_id=#{storeId} and vid=#{vid}
	</update>

	<!-- 根据主键读取记录（主键可能有多个） -->
	<select id="getById" parameterType="Map" resultType="com.mazing.services.store.express.entry.StoreSfTrackPO">
		SELECT * FROM mz_merchant.mz_store_sf_track WHERE store_id=#{param1} AND vid=#{param2}
	</select>

	<!-- 查询全部记录 -->
	<select id="listAll" resultType="com.mazing.services.store.express.entry.StoreSfTrackPO">
		SELECT * FROM mz_merchant.mz_store_sf_track
	</select>

</mapper>
