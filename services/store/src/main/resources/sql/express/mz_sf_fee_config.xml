<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.mazing.services.store.express.dao.SfFeeConfigDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.mazing.services.store.express.entry.SfFeeConfigPO" useGeneratedKeys="false" >
		insert into mz_merchant.mz_sf_fee_config (cuisine_type,weight,distance,express_time,fee,store_code,descrip) values (#{cuisineType},#{weight},#{distance},#{expressTime},#{fee},#{storeCode},#{descrip})
	</insert>

	<!-- 根据主键，删除数据
	<delete id="deleteById" parameterType="Map">
		DELETE FROM mz_merchant.mz_sf_fee_config WHERE cuisine_type=#{param1}
	</delete>
	 -->

	<!-- 更新 -->
	<update id="update" parameterType="com.mazing.services.store.express.entry.SfFeeConfigPO">
		update mz_merchant.mz_sf_fee_config set weight=#{weight},distance=#{distance},express_time=#{expressTime},fee=#{fee},store_code=#{storeCode},descrip=#{descrip} where cuisine_type=#{cuisineType}
	</update>

	<!-- 根据主键读取记录（主键可能有多个） -->
	<select id="getById" parameterType="Map" resultType="com.mazing.services.store.express.entry.SfFeeConfigPO">
		SELECT * FROM mz_merchant.mz_sf_fee_config WHERE cuisine_type=#{param1}
	</select>

	<!-- 查询全部记录 -->
	<select id="listAll" resultType="com.mazing.services.store.express.entry.SfFeeConfigPO">
		SELECT * FROM mz_merchant.mz_sf_fee_config
	</select>

</mapper>
