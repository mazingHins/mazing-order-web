<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.mazing.services.store.base.dao.StoreServiceRangeDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.mazing.services.store.base.entry.StoreServiceRangePO" useGeneratedKeys="false" >
		insert into mz_merchant.mz_store_service_range (range_id,store_id,name,remark,cut_type,cut_value,currency_type,minimum_money,money_type,money,full_free_freight,minute,punctuality,create_time) values (#{rangeId},#{storeId},#{name},#{remark},#{cutType},#{cutValue},#{currencyType},#{minimumMoney},#{moneyType},#{money},#{fullFreeFreight},#{minute},#{punctuality},#{createTime})
	</insert>

	<!-- 删除 -->
	<delete id="deleteById">
		DELETE FROM mz_merchant.mz_store_service_range WHERE range_id = #{rangeId}
	</delete>

	<!-- 根据主键查询记录 -->
	<select id="getById" resultType="com.mazing.services.store.base.entry.StoreServiceRangePO">
		SELECT * FROM mz_merchant.mz_store_service_range WHERE range_id = #{rangeId}
	</select>

	<!-- 查询门店的全部配送服务记录数 -->
	<select id="countByStoreId" resultType="java.lang.Integer">
		SELECT count(range_id) FROM mz_merchant.mz_store_service_range WHERE store_id = #{storeId}
	</select>

	<!-- 查询门店下的全部数据，按money/full_free_freight两个升序进行排序 -->
	<select id="listByStoreOrderByMoney" resultType="com.mazing.services.store.base.entry.StoreServiceRangePO">
		SELECT * FROM mz_merchant.mz_store_service_range WHERE store_id = #{storeId} ORDER BY money ASC, full_free_freight ASC
	</select>

	<!-- 查询门店下的全部数据，按日期先后排序 hins 2015/10/10 修改了排序 -->
	<select id="listByStoreOrderByTime" resultType="com.mazing.services.store.base.entry.StoreServiceRangePO">
		SELECT * FROM mz_merchant.mz_store_service_range WHERE store_id = #{storeId} ORDER BY create_time ASC
	</select>

	<!-- 查询门店下的全部数据，按日期先后排序 -->
	<update id="updateName">
		UPDATE mz_merchant.mz_store_service_range SET name = #{name} where range_id = #{rangeId}
	</update>

</mapper>
