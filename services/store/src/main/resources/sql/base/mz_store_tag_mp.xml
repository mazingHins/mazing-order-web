<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.mazing.services.store.base.dao.StoreTagMpDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.mazing.services.store.base.entry.StoreTagMpPO" useGeneratedKeys="false" >
		insert into mz_merchant.mz_store_tag_mp (store_id,tag_id,create_time) values (#{storeId},#{tagId},#{createTime})
	</insert>

	<!-- 根据主键，删除数据
	<delete id="deleteById" parameterType="Map">
		DELETE FROM mz_merchant.mz_store_tag_mp WHERE store_id=#{param1} AND tag_id=#{param2}
	</delete>
	 -->

	<!-- 更新 -->
	<update id="update" parameterType="com.mazing.services.store.base.entry.StoreTagMpPO">
		update mz_merchant.mz_store_tag_mp set  where store_id=#{storeId} and tag_id=#{tagId}
	</update>

	<!-- 根据主键读取记录（主键可能有多个） -->
	<select id="getById" parameterType="Map" resultType="com.mazing.services.store.base.entry.StoreTagMpPO">
		SELECT * FROM mz_merchant.mz_store_tag_mp WHERE store_id=#{param1} AND tag_id=#{param2}
	</select>

	<!-- 查询全部记录 -->
	<select id="listAll" resultType="com.mazing.services.store.base.entry.StoreTagMpPO">
		SELECT * FROM mz_merchant.mz_store_tag_mp
	</select>
	
	<!-- 根据门店ID查询所有tag -->
	<select id="listByStoreId" parameterType="Map" resultType="com.mazing.services.store.base.entry.StoreTagMpPO">
		SELECT * FROM mz_merchant.mz_store_tag_mp WHERE store_id=#{storeId}
	</select>
	
	<!-- 删除 -->
	<delete id="deleteByStoreId" parameterType="Map">
		DELETE FROM mz_merchant.mz_store_tag_mp WHERE store_id=#{storeId}
	</delete>
	
	<!-- 获取包含该tag的所有门店 -->
	<select id="listStoreIdByTagId" parameterType="Map" resultType="java.lang.Long">
		SELECT DISTINCT(store_id) FROM mz_merchant.mz_store_tag_mp WHERE tag_id=#{tagId}
	</select>
	
	<!-- 删除所有门店下的指定tag -->
	<delete id="deleteByTagId" parameterType="Map">
		DELETE FROM mz_merchant.mz_store_tag_mp WHERE tag_id=#{tagId}
	</delete>
	
	<!-- 根据门店ID查询所有tagId -->
	<select id="listTagIdByStoreId" parameterType="Map" resultType="java.lang.Integer">
		SELECT tag_id FROM mz_merchant.mz_store_tag_mp WHERE store_id=#{storeId}
	</select>
</mapper>
